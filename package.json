{
  "name": "game-of-life",
  "description": "React version of Conway's Game Of Life",
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.dev.js --port 3000",
    "build:prod": "webpack --env.prod --config webpack.config.js --progress --color",
    "test": "jest"
  },
  "dependencies": {
    "bootstrap": "5.3.8",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@babel/preset-react": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "babel-jest": "30.2.0",
    "babel-loader": "10.0.0",
    "babel-plugin-react-compiler": "1.0.0",
    "css-loader": "7.1.2",
    "html-webpack-plugin": "5.6.5",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "identity-obj-proxy": "3.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "@types/jest": "30.0.0",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "style-loader": "4.0.0",
    "webpack": "5.103.0",
    "webpack-cli": "6.0.1",
    "webpack-dev-server": "5.2.2"
  },
  "engines": {
    "node": ">=18"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ],
      "@babel/preset-typescript"
    ],
    "plugins": [
      "babel-plugin-react-compiler"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.[jt]sx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-debugger": "off",
      "no-console": "off",
      "no-unused-vars": "warn",
      "react/prop-types": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "root": true
  }
}
